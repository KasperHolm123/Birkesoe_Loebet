<Window x:Class="Birkesoe_Loebet.Views.RegisterRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Birkesoe_Loebet.Views"
        mc:Ignorable="d"
        Title="RegisterRunnerWindow" Height="450" Width="400">
    <Grid>
        <Label Content="Runner ID" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="25,96,0,0" Text="{Binding Path=RunnerID, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="Rute 1" HorizontalAlignment="Left" Margin="238,58,0,0" VerticalAlignment="Top" IsChecked="{Binding Route1Enabled}"/>
        <CheckBox Content="Rute 2" HorizontalAlignment="Left" Margin="238,98,0,0" VerticalAlignment="Top" IsChecked="{Binding Route2Enabled}"/>
        <CheckBox Content="Rute 3" HorizontalAlignment="Left" Margin="238,138,0,0" VerticalAlignment="Top" IsChecked="{Binding Route3Enabled}"/>
        <Button Content="Register" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Command="{Binding Path=RegisterRunner}"/>
    </Grid>
</Window>
